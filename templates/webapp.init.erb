# Source function library.
<% if @osfamily == 'RedHat' -%>
. /etc/rc.d/init.d/functions
<% else -%>
. /lib/lsb/init-functions
<% end -%>

# Define some variables
APP=skyline-webapp
# Name of the user to run as
USER=<%= @username %>
# Location of application's base directory
BASE=<%= @install_dir %>/skyline/skyline-master

start() {
  echo "Starting $APP"
  su -l $USER -c "cd $BASE/bin && ./webapp.d start"
  return $?
}

stop() {
  echo "Stopping $APP"
  su -l $USER -c "cd $BASE/bin && ./webapp.d stop"
  return $?
}

case "$1" in
  # Start command
  start)
    start
    RETVAL=$?
    ;;
  # Stop command
  stop)
    stop
    RETVAL=$?
    ;;
  # Restart command
  restart)
    stop
    start
    RETVAL=$?
    ;;
  # Status command
  status)
    ps aux | grep -v grep | grep 'webapp.py start'
    RETVAL=$?
    ;;
  *)
    echo "Usage: $APP {start|restart|stop|status}"
    RETVAL=2
    ;;
esac
 
exit $RETVAL
